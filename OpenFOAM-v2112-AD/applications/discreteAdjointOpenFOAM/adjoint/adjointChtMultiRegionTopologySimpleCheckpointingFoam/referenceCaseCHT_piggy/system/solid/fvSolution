FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SDLS yes;

solvers
{
    "(h|hReverse)"
    {
        solver          PBiCGStab;
        preconditioner  FDIC;
        tolerance       1e-6;
        //relTol          0.001;
        SDLS $SDLS;
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
}

relaxationFactors
{
    equations
    {
        h               0.95;
    }
}

