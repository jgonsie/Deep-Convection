FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

SDLS no;

solvers
{
    "(.*)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-05;
        relTol          0;
        SDLS            $SDLS;
    }

    "(p|pReverse)"
    {
        solver          GAMG;
        tolerance       1e-06;
        relTol          0;
        smoother        DIC;
        SDLS            $SDLS;
    }

}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    consistent      yes;
    costFunctionPatches (inlet outlet);
    costFunction "pressureLoss";
    tapeSizeMB 4098;
}

relaxationFactors
{
    equations
    {
        U               0.9; // 0.9 is more stable but 0.95 more convergent
        ".*"            0.9; // 0.9 is more stable but 0.95 more convergent
    }
}


